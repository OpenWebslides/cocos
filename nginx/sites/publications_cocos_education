##
# CoCOS pressbook
#

map $uri $blogname{
    ~^(?P<blogpath>/[^/]+/)files/(.*)       $blogpath ;
}

map $blogname $blogid{
    default -999;

    #Ref: http://wordpress.org/extend/plugins/nginx-helper/
    include /data/pressbook/wp-content/uploads/nginx-helper/map.conf;
}

server {
    server_name publications.cocos.education;

    listen 80;
    listen [::]:80;

    include include.d/lets-encrypt.conf;

    add_header X-Frame-Options "";

    location / {
        return 301 https://publications.cocos.education$request_uri;
    }
}

server {
    server_name publications.cocos.education;

    listen 443      ssl;
    listen [::]:443 ssl;

    ssl_certificate     /etc/letsencrypt/live/cocos.education/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/cocos.education/privkey.pem;

    include include.d/ocsp-stapling.conf;

    root /data/pressbook/;

    add_header X-Frame-Options "";

    location ~ ^(/[^/]+/)?files/(.+) {
        try_files /wp-content/blogs.dir/$blogid/files/$2 /wp-includes/ms-files.php?file=$2 ;
        access_log off;     log_not_found off; expires max;
    }

    # Avoid php readfile()
    location ^~ /blogs.dir {
        internal;
        alias /data/pressbook/wp-content/blogs.dir ;
        access_log off;     log_not_found off; expires max;
    }

    if (!-e $request_filename) {
        rewrite /wp-admin$ $scheme://$host$uri/ permanent;
        rewrite ^(/[^/]+)?(/wp-.*) $2 last;
        rewrite ^(/[^/]+)?(/.*\.php) $2 last;
    }

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    include include.d/php-fpm.conf;
    include include.d/assets.conf;
}
